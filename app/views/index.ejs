<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Dynamic Templates</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
  </head>
  <body>
    <div>
      <h1 style="color:red;background-color:green;">Welcome to Dynamic Templates</h1>
      <h1><% 3 * 3 %></h1>
      <h1>Multiply 3 * 3 = <%= 3 * 3 %></h1>
      <h1>A random number between 3 & 12: <%= Math.floor(Math.random() * 10) + 3%></h1>
      <% var a = 3, b = 2 %>
      <p><%= a + b %></p>
      <% if(a===3){ %>
        <p>a is 3</p>
      <% }else{ %>
        <p>a is not 3</p>
      <% } %>

      <% var colors = ['blue', 'green', 'yellow', 'orange', 'pink', 'red', 'purple'] %>
      <% for(var i = 0; i < colors.length; i++){ %>
      <p style="color:<%= colors[i] %>;font-size:<%= 12 + (i * 2) %>px;background-color:<%= ((i + 1) < colors.length) ? colors[i + 1] : colors[0] %>;"><%= colors[i] %></p>
      <% } %>
    </div>
  </body>
</html>
